<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ManageCustomer</servlet-name>
        <servlet-class>ManageCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCustomerControl</servlet-name>
        <servlet-class>control.ManageCustomerControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCarControl</servlet-name>
        <servlet-class>control.ManageCarControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageStaffControl</servlet-name>
        <servlet-class>control.ManageStaffControl</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ManageCustomer</servlet-name>
        <url-pattern>/ManageCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCustomerControl</servlet-name>
        <url-pattern>/ManageCustomerControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCarControl</servlet-name>
        <url-pattern>/ManageCarControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageStaffControl</servlet-name>
        <url-pattern>/ManageStaffControl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
